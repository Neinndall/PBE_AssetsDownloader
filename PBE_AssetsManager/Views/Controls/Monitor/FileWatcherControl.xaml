<UserControl x:Class="PBE_AssetsManager.Views.Controls.Monitor.FileWatcherControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBE_AssetsManager.Views.Controls.Monitor"
             xmlns:models="clr-namespace:PBE_AssetsManager.Views.Models"
             xmlns:services="clr-namespace:PBE_AssetsManager.Services"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=services:MonitorService, IsDesignTimeCreatable=True}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="+ Add URL" Style="{StaticResource ModernButton}" Width="120" Click="AddUrl_Click"/>
            <!-- Search Box -->
                <Grid Width="250" Margin="10,0,0,0">
                    <Border Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="6"/>
                    <TextBox x:Name="txtSearch"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="12,10"
                             Foreground="{StaticResource TextPrimary}"
                             CaretBrush="White"
                             FontSize="14"
                             TextChanged="TxtSearch_TextChanged"
                             GotFocus="TxtSearch_GotFocus"
                             LostFocus="TxtSearch_LostFocus"/>
                    <TextBlock Text="ðŸ” Search ..."
                               x:Name="txtSearchPlaceholder"
                               IsHitTestVisible="False"
                               Foreground="{StaticResource TextMuted}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0">
                    </TextBlock>
                </Grid>
        </StackPanel>

        <!-- Cards List -->
        <ListView x:Name="MonitoredItemsListView" Grid.Row="1" ItemsSource="{Binding MonitoredItems}" Background="Transparent" BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Margin" Value="0,0,10,10"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource SettingsCard}" Width="350" MinHeight="150">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <StackPanel Grid.Row="0" Margin="15,15,15,10">
                                <TextBlock Text="{Binding Alias}" FontWeight="Bold" FontSize="16" Foreground="{StaticResource TextPrimary}" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding Url}" FontSize="11" Foreground="{StaticResource TextMuted}" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <!-- Body -->
                            <StackPanel Grid.Row="1" Margin="15,0,15,10" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="10" Height="10" Fill="{Binding StatusColor}" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding StatusText}" Margin="8,0,0,0" Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding LastChecked}" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="0,5,0,0"/>
                            </StackPanel>

                            <!-- Footer -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="15">
                                <Button Content="View Changes" 
                                        Click="ViewChanges_Click"
                                        Style="{StaticResource ModernButton}" 
                                        Margin="0,0,5,0" 
                                        IsEnabled="{Binding HasChanges}"/>
                                
                                <Button Content="Remove" Style="{StaticResource DestructiveButton}" Click="Remove_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>