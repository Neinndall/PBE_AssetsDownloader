<UserControl x:Class="PBE_AssetsManager.Views.Dialogs.Controls.WadResultsTreeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PBE_AssetsManager.Views.Dialogs.Controls"
             xmlns:converters="clr-namespace:PBE_AssetsManager.Views.Converters"
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400">
    <UserControl.Resources>
        <converters:WadComparisonIconConverter x:Key="WadComparisonIconConverter"/>
        <converters:ChunkDiffTypeToBrushConverter x:Key="DiffTypeToBrushConverter"/>

        <ContextMenu x:Key="WadDiffContextMenu" Opened="ContextMenu_Opened">
            <MenuItem Header="View Differences" x:Name="ViewDifferencesMenuItem" Click="ViewDifferences_Click">
                <MenuItem.Icon>
                    <materialDesign:MaterialIcon Kind="FileFindOutline"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Download Selected" Click="DownloadMenuItem_Click">
                <MenuItem.Icon>
                    <materialDesign:MaterialIcon Kind="CloudDownloadOutline"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <HierarchicalDataTemplate x:Key="DiffItemTemplate" ItemsSource="{Binding Files}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:MaterialIcon Grid.Column="0" Kind="{Binding Converter={StaticResource WadComparisonIconConverter}}" 
                                             VerticalAlignment="Center" 
                                             Margin="0,0,5,0"/>
                <TextBlock Grid.Column="1" Text="{Binding FileName}" VerticalAlignment="Center"/>
            </Grid>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate x:Key="DiffTypeTemplate" ItemsSource="{Binding Diffs}" ItemTemplate="{StaticResource DiffItemTemplate}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:MaterialIcon Grid.Column="0" Kind="{Binding Converter={StaticResource WadComparisonIconConverter}}" 
                                             VerticalAlignment="Center" 
                                             Margin="0,0,5,0" 
                                             Foreground="{Binding Type, Converter={StaticResource DiffTypeToBrushConverter}}"/>
                <TextBlock Grid.Column="1" Text="{Binding TypeNameWithCount}" VerticalAlignment="Center" Foreground="{Binding Type, Converter={StaticResource DiffTypeToBrushConverter}}"/>
            </Grid>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate x:Key="WadGroupTemplate" ItemsSource="{Binding Types}" ItemTemplate="{StaticResource DiffTypeTemplate}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:MaterialIcon Grid.Column="0" Kind="{Binding Converter={StaticResource WadComparisonIconConverter}}" 
                                             VerticalAlignment="Center" 
                                             Margin="0,0,5,0"/>
                <TextBlock Grid.Column="1" Text="{Binding WadNameWithCount}" FontWeight="Bold" VerticalAlignment="Center"/>
            </Grid>
        </HierarchicalDataTemplate>
    </UserControl.Resources>
    <Border Style="{StaticResource SettingsCard}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                <materialDesign:MaterialIcon Kind="FormatListGroup" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Differences" 
                             FontSize="16" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimary}"/>
            </StackPanel>

            <!-- Search Box -->
            <Grid Grid.Row="1" Margin="0,0,0,8">
                <Border Background="{StaticResource DarkBackground}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="6"
                        SnapsToDevicePixels="True"/>
                <TextBox x:Name="searchTextBox"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="12,8"
                         Margin="2"
                         Foreground="{StaticResource TextPrimary}"
                         FontSize="14"
                         CaretBrush="Transparent"
                         TextChanged="SearchTextBox_TextChanged"/>
                <TextBlock Text="ðŸ” Search files..."
                           x:Name="searchPlaceholder"
                           IsHitTestVisible="False"
                           Foreground="{StaticResource TextMuted}"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="14,0,0,0">
                </TextBlock>
            </Grid>

            <Border Grid.Row="2"
                    Background="{StaticResource DarkBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="6">
                <TreeView x:Name="resultsTreeView" 
                          Style="{StaticResource ModernTreeView}"
                          Background="Transparent"
                          BorderThickness="0"
                          ItemTemplate="{StaticResource WadGroupTemplate}"
                          SelectedItemChanged="ResultsTreeView_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem" BasedOn="{StaticResource ModernTreeViewItem}">
                            <Setter Property="ContextMenu" Value="{StaticResource WadDiffContextMenu}"/>
                            <EventSetter Event="PreviewMouseRightButtonDown" Handler="TreeViewItem_PreviewMouseRightButtonDown"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
            </Border>
        </Grid>
    </Border>
</UserControl>