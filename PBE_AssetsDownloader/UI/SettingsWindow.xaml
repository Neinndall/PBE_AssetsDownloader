<Window x:Class="PBE_AssetsDownloader.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        Title="Settings" Height="720" Width="940"
        MinHeight="720" MinWidth="940"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#FF1E1E1E"
        FontFamily="Consolas, Courier New">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" 
                Background="{StaticResource SidebarBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- Header -->
                <Border Background="{StaticResource CardBackground}" 
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="0,0,0,1"
                        Padding="20,24">
                    <StackPanel>
                        <TextBlock Text="âš™ï¸ SETTINGS" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="{StaticResource AccentBlue}"/>
                        <TextBlock Text="Configuration Panel" 
                                  FontSize="11" 
                                  Foreground="{StaticResource TextMuted}"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Items -->
                <StackPanel Margin="0,16,0,0">
                    <RadioButton x:Name="NavGeneral" 
                               Content="General" 
                               Tag="ðŸ”§"
                               GroupName="Navigation" 
                               IsChecked="True" 
                               Style="{StaticResource NavButtonStyle}"/>
                    
                    <RadioButton x:Name="NavHashes" 
                               Content="Hash Paths" 
                               Tag="ðŸ“"
                               GroupName="Navigation" 
                               Style="{StaticResource NavButtonStyle}"/>
                    
                    <RadioButton x:Name="NavAdvanced" 
                               Content="Advanced" 
                               Tag="âš¡"
                               GroupName="Navigation" 
                               Style="{StaticResource NavButtonStyle}"/>
                    
                    <RadioButton x:Name="NavLogs" 
                               Content="Logs" 
                               Tag="ðŸ“‹"
                               GroupName="Navigation" 
                               Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="0" 
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Disabled"
                        Padding="32,24">

                <ContentControl x:Name="SettingsContentArea"/>
                
            </ScrollViewer>

            <!-- Bottom Action Bar -->
            <Border Grid.Row="1" 
                  Background="{StaticResource CardBackground}"
                  BorderBrush="{StaticResource BorderColor}"
                  BorderThickness="0,1,0,0"
                  Padding="32,16">
                <Grid>
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Left">
                        <materialDesign:MaterialIcon Kind="LightbulbOn" 
                                                     FontSize="12" 
                                                     Margin="0,0,8,0" 
                                                     VerticalAlignment="Center"
                                                     Foreground="Gold"/>
                        <TextBlock Text="Changes arenÂ´t applied immediately"
                                 Foreground="{StaticResource TextMuted}" 
                                 FontSize="12" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right">
                        <Button x:Name="BtnResetDefaults" 
                              Content="Reset to Defaults" 
                              Height="36" 
                              Width="154"
                              Click="BtnResetDefaults_Click"
                              Style="{StaticResource SecondaryButton}" 
                              Margin="0,0,12,0"/>
                        
                        <Button x:Name="btnSave" 
                              Content="Save Changes" 
                              Height="36" 
                              Width="120"
                              Click="btnSave_Click"
                              Style="{StaticResource ModernButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>