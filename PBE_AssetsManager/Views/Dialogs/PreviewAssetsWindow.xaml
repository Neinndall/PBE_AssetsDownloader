<Window x:Class="PBE_AssetsManager.Views.Dialogs.PreviewAssetsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PBE_AssetsManager.Views.Dialogs"
        xmlns:controls="clr-namespace:PBE_AssetsManager.Views.Dialogs.Controls"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d"
        Title="Assets Preview"
        Height="860" Width="1400" MinHeight="860" MinWidth="1400"
        Background="{StaticResource SidebarBackground}"
        FontFamily="Consolas, Courier New">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="ðŸ‘ï¸" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                <StackPanel>
                    <TextBlock Text="ASSETS PREVIEW" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentBlue}"/>
                    <TextBlock Text="Browse and preview available assets" 
                               FontSize="14" 
                               Foreground="{StaticResource TextMuted}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <controls:AssetListControl x:Name="AssetList" Grid.Column="0" SelectionChanged="AssetList_SelectionChanged"/>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent"/>

            <controls:AssetPreviewControl x:Name="AssetPreview" Grid.Column="2"/>
        </Grid>
    </Grid>
</Window>