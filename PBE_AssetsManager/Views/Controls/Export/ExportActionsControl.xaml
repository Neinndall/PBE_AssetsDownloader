<UserControl x:Class="PBE_AssetsManager.Views.Controls.Export.ExportActionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBE_AssetsManager.Views.Controls.Export"
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <materialDesign:MaterialIcon Grid.Column="0" Kind="Flash" 
                                         FontSize="20" 
                                         Margin="0,0,12,0" 
                                         VerticalAlignment="Top"
                                         Foreground="{StaticResource AccentOrange}"/>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Actions" 
                           FontWeight="Medium"
                           FontSize="14"
                           Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Preview or download the selected assets" 
                           FontSize="12" 
                           Foreground="{StaticResource TextMuted}"
                           Margin="0,2,0,12"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnPreviewAssets" 
                            Content="ðŸ” Preview Assets" 
                            Height="36"
                            Width="160"
                            Margin="0,0,16,0"
                            Style="{StaticResource ModernButton}"
                            Click="btnPreviewAssets_Click"
                            ToolTip="Preview selected assets before download"/>

                    <Button x:Name="BtnDownloadSelectedAssets" 
                            Content="â¬‡ï¸ Download Assets" 
                            Height="36"
                            Width="160"
                            Style="{StaticResource ModernButton}"
                            Click="BtnDownloadSelectedAssets_Click"
                            ToolTip="Download the selected assets"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>