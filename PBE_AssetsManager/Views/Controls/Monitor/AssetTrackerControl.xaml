<UserControl x:Class="PBE_AssetsManager.Views.Controls.Monitor.AssetTrackerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBE_AssetsManager.Views.Controls.Monitor"
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="15">

        <!-- Header -->
        <Border DockPanel.Dock="Top"
                Style="{StaticResource SettingsCard}"
                Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <materialDesign:MaterialIcon Kind="ImageSearchOutline" 
                                           FontSize="20" 
                                           Foreground="{StaticResource AccentBlue}"
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Text="Asset Tracker" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Automatically discover new game assets" 
                              FontSize="12" 
                              Foreground="{StaticResource TextMuted}"
                              Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Top Controls -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Category:" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
            <ComboBox Name="CategoryComboBox" 
                      Style="{StaticResource ModernComboBox}"
                      SelectionChanged="CategoryComboBox_SelectionChanged"
                      Width="200" Margin="5,0,10,0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Margin="0,0,8,0" VerticalAlignment="Center">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Setter Property="Fill" Value="Transparent"/> <!-- Explicitly set fill to transparent when collapsed -->
                                        <Style.Triggers>
                                            <!-- Prioritize HasNewAssets if no other status is active -->
                                            <DataTrigger Binding="{Binding HasNewAssets}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Setter Property="Fill" Value="{StaticResource AccentBlue}"/>
                                            </DataTrigger>
                                            <!-- Checking status takes precedence -->
                                            <DataTrigger Binding="{Binding Status}" Value="Checking">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Setter Property="Fill" Value="Blue"/>
                                            </DataTrigger>
                                            <!-- CompletedSuccess status takes precedence -->
                                            <DataTrigger Binding="{Binding Status}" Value="CompletedSuccess">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Setter Property="Fill" Value="Green"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Name="CheckButton" Content="Check" Style="{StaticResource ModernButton}" Click="CheckButton_Click" Margin="0,0,5,0"/>
            <Button Name="DownloadButton" Content="Download All" Style="{StaticResource ModernButton}" Click="DownloadButton_Click" Margin="0,0,5,0"/>
            <Button Name="LoadMoreButton" Content="Load More" Style="{StaticResource ModernButton}" Click="LoadMoreButton_Click" Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Asset Grid -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="AssetsItemsControl" Margin="-20 0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid IsItemsHost="True" Columns="4"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel HorizontalAlignment="Center" Margin="20">
                            <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="3" Width="160" Height="160">
                                <Grid>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="OK">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <materialDesign:MaterialIcon Width="13" Height="13" VerticalAlignment="Center" Margin="0,0,5,0">
                                                <materialDesign:MaterialIcon.Style>
                                                    <Style TargetType="materialDesign:MaterialIcon">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Setter Property="Kind" Value="ClockOutline" />
                                                                <Setter Property="Foreground" Value="{StaticResource TextMuted}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Checking">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Setter Property="Kind" Value="Sync" />
                                                                <Setter Property="Foreground" Value="{StaticResource AccentBlue}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Not Found">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Setter Property="Kind" Value="CloseCircleOutline" />
                                                                <Setter Property="Foreground" Value="{StaticResource AccentRed}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </materialDesign:MaterialIcon.Style>
                                            </materialDesign:MaterialIcon>

                                            <TextBlock Text="{Binding Status}" FontWeight="SemiBold" Foreground="{StaticResource TextMuted}" />
                                        </StackPanel>

                                        <TextBlock Text="{Binding DisplayName}" TextWrapping="Wrap" TextAlignment="Center" FontSize="10" Foreground="{StaticResource TextMuted}" Margin="0,5,0,0"/>
                                    </StackPanel>
                                    <Image Source="{Binding Thumbnail}" Stretch="Uniform"/>
                                </Grid>
                            </Border>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                                <Button Name="SaveAssetButton"
                                        Style="{StaticResource SaveIconButton}"
                                        Click="SaveAssetButton_Click"
                                        ToolTip="Save Asset"
                                        Tag="{Binding}">
                                    <materialDesign:MaterialIcon Kind="ContentSave" Width="15" Height="15"/>
                                </Button>
                                <Button Name="RemoveAssetButton"
                                        Style="{StaticResource DeleteIconButton}"
                                        Click="RemoveAssetButton_Click"
                                        ToolTip="Remove Asset"
                                        Margin="10,0,0,0"
                                        Tag="{Binding}">
                                    <materialDesign:MaterialIcon Kind="TrashCanOutline" Width="15" Height="15"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>


    </DockPanel>
</UserControl>