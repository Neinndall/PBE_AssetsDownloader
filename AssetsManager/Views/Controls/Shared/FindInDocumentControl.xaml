<UserControl x:Class="AssetsManager.Views.Controls.Shared.FindInDocumentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="48" d:DesignWidth="250"
             Width="250" Height="38">
    <UserControl.Resources>
        <Style x:Key="FindIconButton" TargetType="Button" BasedOn="{StaticResource TransparentIconButton}">
            <Setter Property="Width" Value="26"/>
            <Setter Property="Height" Value="26"/>
        </Style>
    </UserControl.Resources>
    <Border Background="{StaticResource CardBackground}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1"
            CornerRadius="5"
            Padding="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchTextBox"
                     Grid.Column="0"
                     Style="{StaticResource EditableModernTextBox}"
                     VerticalContentAlignment="Center"
                     KeyDown="SearchTextBox_KeyDown"/>

            <Button x:Name="PreviousButton" Grid.Column="1" Style="{StaticResource FindIconButton}" Click="PreviousButton_Click" ToolTip="Find Previous" VerticalAlignment="Center">
                <materialIcons:MaterialIcon Kind="ChevronUp" />
            </Button>
            <Button x:Name="NextButton" Grid.Column="2" Style="{StaticResource FindIconButton}" Click="NextButton_Click" ToolTip="Find Next" VerticalAlignment="Center">
                <materialIcons:MaterialIcon Kind="ChevronDown" />
            </Button>
            <Button x:Name="CloseButton" Grid.Column="3" Style="{StaticResource FindIconButton}" Click="CloseButton_Click" ToolTip="Close" VerticalAlignment="Center" Width="24" Height="24">
                <materialIcons:MaterialIcon Kind="Close" />
            </Button>
        </Grid>
    </Border>
</UserControl>